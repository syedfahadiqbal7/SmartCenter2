@model AFFZ_Customer.Models.Partial.LoginModel
@{
    ViewData["Title"] = "Customer Login";
}

<!-- Link to Bootstrap CSS (if not already included in your layout) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Custom Styles -->
<style>
    body {
        background-color: #f8f9fa;
    }

    .login-wrap {
        background: #ffffff;
        padding: 30px; /* Reduced padding */
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .login-header h3 {
        margin-bottom: 20px; /* Decreased bottom margin */
        margin-top: 0; /* Removed top margin */
        font-weight: bold;
        color: #343a40;
    }

    .login-btn {
        background-color: #007bff;
        border-color: #007bff;
    }

        .login-btn:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .social-login .btn {
        background-color: #ea4335;
        color: #ffffff;
    }

        .social-login .btn:hover {
            background-color: #c32f27;
        }

    .no-acc {
        margin-top: 15px; /* Adjusted for spacing */
        text-align: center;
    }

    .forgot-link {
        font-size: 0.9rem;
        color: #007bff;
    }

        .forgot-link:hover {
            text-decoration: underline;
        }

    .form-control {
        border-radius: 5px;
    }

    .pass-group {
        position: relative;
    }

    .toggle-password {
        position: absolute;
        top: 50%;
        right: 15px;
        transform: translateY(-50%);
        cursor: pointer;
    }

    .login-or {
        margin: 10px 0; /* Decreased vertical margin */
    }

    .or-line {
        height: 1px;
        background: #e0e0e0;
    }

    .span-or {
        position: absolute;
        top: -10px;
        background: #fff;
        padding: 0 10px;
        color: #6c757d;
        font-weight: 500;
    }
</style>

<div class="container">
    <div class="col-md-6 col-lg-5 mx-auto">
        <div class="login-wrap">
            <div class="login-header text-center">
                <h3>Customer Login</h3>
            </div>

            <!-- Login Form -->
            <form action="@Url.Action("CustomersLogin", "Login")" method="post">
                <input type="hidden" name="returnUrl" id="returnUrl" value="@ViewBag.ReturnUrl" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="text" class="form-control" placeholder="johndoe@example.com" name="Email" value="@Model.Email" asp-for="Email">
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <label class="form-label mb-0">Password</label>
                        <a class="forgot-link" href="password-recovery.html">
                            Forgot password?
                        </a>
                    </div>
                    <div class="pass-group">
                        <input type="password" class="form-control pass-input" placeholder="*************" name="Password" asp-for="Password" value="@Model.Password">
                        <span class="toggle-password feather-eye-off" ></span>
                    </div>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" name="rememberme" class="form-check-input rememberme" id="rememberMe">
                    <label class="form-check-label" for="rememberMe">Remember Me</label>
                </div>
                
                <button type="submit" class="btn btn-primary btn-sm w-100 login-btn">Login</button>
            </form>
            <div class="login-or my-3 position-relative text-center">
                <span class="or-line position-absolute top-50 start-0 w-100"></span>
                <span class="span-or">OR</span>
            </div>
            <div class="social-login">
                <a href="#" class="btn btn-google btn-sm w-100 mb-2"><img src="/assets/img/icons/google.svg" class="me-2" alt="img">Login with Google</a>
            </div>
            <p class="no-acc">Don't have an account? <a href="~/Signup">Register</a></p>
            <!-- /Login Form -->
        </div>
    </div>
</div>

<!-- Toggle Password Visibility Script -->
<script>
    function togglePasswordVisibility(element) {
        const passwordInput = element.parentElement.querySelector('.pass-input');
        const icon = element;

        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            icon.classList.remove('feather-eye-off');
            icon.classList.add('feather-eye');
        } else {
            passwordInput.type = "password";
            icon.classList.remove('feather-eye');
            icon.classList.add('feather-eye-off');
        }
    }
</script>

<!-- Include Feather Icons (for eye icon) -->
<script src="https://unpkg.com/feather-icons"></script>
<script>
    feather.replace();
    const params = new URL(location.href).searchParams;
    const c = params.get('returnUrl');
    //console.log(c);
    document.getElementById("returnUrl").value = c;
</script>

