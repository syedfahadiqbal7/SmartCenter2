<div class="col-lg-9">
    <!-- Reviews Sort -->
    <div class="row">
        <div class="col-sm-6">
            <div class="widget-title">
                <h4>Reviews</h4>
            </div>
        </div>

        <div class="col-sm-6 text-sm-end">
            <div class="review-sort">
                <p>Sort</p>
                <select class="select">
                    <option>Newest</option>
                    <option>Highest</option>
                    <option>Lowest</option>
                </select>
            </div>
        </div>
    </div>
    <!-- /Reviews Sort -->
    <!-- Review List -->
    @if (ViewBag.MyReviews != null && ViewBag.MyReviews.Count > 0)
    {
        foreach (var review in ViewBag.MyReviews)
        {
            <div class="review-list">
                <div class="review-imgs">
                    <a href="service-details.html">
                        @* <img class="rounded img-fluid" src="@Url.Content($"/assets/img/services/{review.ServiceId}.jpg")" alt="image"> *@
                        <img class="rounded img-fluid" src="/assets/img/services/service-12.jpg" alt="image">
                    </a>
                </div>
                <div class="review-info">
                    <h5>
                        <a href="service-details.html">@review.Service.serviceName</a>
                        
                    </h5>
                    <div class="review-user">
                        <img class="avatar rounded-circle" src="@Url.Action("GetImage", "Login")" alt="image">
                        @review.CUser.CustomerName
                        <span class="review-date">@review.ReviewDate.ToString("MMMM dd, yyyy hh:mm tt")</span>
                    </div>
                </div>
                <div class="review-count">
                    <div class="rating">
                        @for (int i = 0; i < review.Rating; i++)
                        {
                            <i class="fas fa-star filled"></i>
                        }
                        @for (int i = review.Rating; i < 5; i++)
                        {
                            <i class="fas fa-star"></i>
                        }
                    </div>
                </div>
                <p>@review.ReviewText</p>
            </div>
        }
    }
    else
    {
        <div class="no-reviews">
            <p>No reviews available at the moment.</p>
        </div>
    }
    <!-- /Review List -->
    <!-- Pagination or Entry Controls -->
    <div class="row">
        <div class="col-sm-6">
            <div class="review-entries">
                <span>Show</span>
                <select>
                    <option>10</option>
                    <option>25</option>
                    <option>50</option>
                    <option>100</option>
                </select>
                <span>entries</span>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="review-pagination">
                <p>1 - @ViewBag.MyReviews.Count of @ViewBag.MyReviews.Count</p>
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="#">2 <span class="visually-hidden">(current)</span></a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
