@model AFFZ_Provider.Models.Partial.LoginModel
@{
    // TempData["ViewName"] = "Dashboard";
}

<div class="col-md-6 col-lg-6 mx-auto">
    <div class="login-wrap">
        <div class="login-header">
            <h3>Merchant Login</h3>
        </div>

        <!-- Login Form -->
        <form action="@Url.Action("ProviderLogin", "Login")" method="post">
            <div class="log-form">
                <div class="form-group">
                    <label class="col-form-label">Email</label>
                    <input type="text" class="form-control" placeholder="johndoe@example.com" name="Email" value="@Model.Email">
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <label class="col-form-label">Password</label>
                        </div>
                        <div class="col-auto">
                            <a class="forgot-link" href="password-recovery.html">
                                Forgot password?
                            </a>
                        </div>
                    </div>
                    <div class="pass-group">
                        <input type="password" class="form-control pass-input" placeholder="*************" name="Password" value="@Model.Password">
                        <span class="toggle-password feather-eye-off"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <label class="custom_check">
                            <input type="checkbox" name="rememberme" class="rememberme">
                            <span class="checkmark"></span>Remember Me
                        </label>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary w-100 login-btn">Login</button>
        </form>
        
        <p class="no-acc">Don't have an account? <a href="~/Signup">Register</a></p>
        <!-- /Login Form -->

    </div>
</div>
