@model AFFZ_Provider.Models.M_SericeDocumentListBinding

<h2>Update Service Document Binding</h2>
<div class="page-wrapper">
    <div class="content">
        <!-- Page Header -->
        <div class="page-header">
            <div class="row">
                <div class="col-md-4">
                    <div class="provider-subtitle">
                        <h4>Update Category and Service Bindings</h4>
                    </div>
                </div>
            </div>
        </div>
        <!-- Display success message -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["FailMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["FailMessage"]
            </div>
        }
        <div class="row">
            <div class="col-lg-12 m-auto">
                @using (Html.BeginForm("CategoryServiceUpdate", null, FormMethod.Post, new { @class = "form", @novalidate = "novalidate" }))
                {
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.Hidden("id", Model.Id)
                    <div class="form-group">
                        <label>Service Category</label>
                        <select class="form-select" name="CategoryID" id="CategoryID" asp-items="@ViewBag.ServiceCategoryComboData" required>
                            <option value="">--Select--</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                        <span asp-validation-for="CategoryID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Service Title</label>
                        <select class="form-select" name="ServiceDocumentListId" id="ServiceDocumentListId" asp-items="@ViewBag.ServiceListComboData" required>
                            <option value="">--Select--</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.ServiceDocumentListId, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="CategoryServiceIndex" asp-controller="ServiceDocumentBindings" class="btn btn-secondary">Cancel</a>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/assets/js/multi.js/multi.min.js"></script>
    <script>
        var multiSelectBasic = document.getElementById("multiselect-basic");
        multi(multiSelectBasic, {
            enable_search: false
        });
    </script>
}
