@model AFFZ_Provider.Models.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<link rel="stylesheet" href="/css/forgot-password.css">

<div class="container d-flex flex-column align-items-center justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="login-wrap">
            <div class="login-header text-center">
                <h3>Forgot Password</h3>
            </div>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["FailMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["FailMessage"]
                </div>
            }
            <form asp-action="ForgotPassword" asp-controller="Login" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email Address</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your registered email">
                </div>
                <button type="submit" class="btn btn-primary btn-sm w-100 login-btn">Send Reset Link</button>
            </form>
        </div>
    </div>
</div>
